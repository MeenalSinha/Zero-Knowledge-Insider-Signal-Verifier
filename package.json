{
  "name": "zk-insider-verifier",
  "version": "1.0.0",
  "description": "Zero-Knowledge Insider Signal Verifier - Hardhat + Smart Contracts (Frontend has separate package.json in /frontend)",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:optimism": "hardhat run scripts/deploy.js --network optimismSepolia",
    "verify": "hardhat verify",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "circuit:setup": "cd circuits && ./setup_circuit.sh",
    "backend:start": "cd backend && uvicorn api:app --reload",
    "frontend:dev": "cd frontend && npm run dev",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "keywords": [
    "zero-knowledge",
    "blockchain",
    "ethereum",
    "insider-trading",
    "sec-filings",
    "zk-proofs",
    "circom",
    "groth16"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
